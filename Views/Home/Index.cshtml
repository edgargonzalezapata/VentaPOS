@{
    ViewData["Title"] = "Inicio";
}

<div class="tw-min-h-screen tw-bg-gradient-to-b tw-from-gray-50 tw-to-white">
    <!-- Hero Section -->
    <div class="tw-bg-gradient-to-r tw-from-blue-600 tw-to-indigo-700 tw-py-20">
        <div class="tw-container tw-mx-auto tw-px-4 tw-text-center">
            <h1 class="tw-text-5xl tw-font-bold tw-text-white tw-mb-6">
                VentaPOS: Tu Sistema de Ventas Inteligente
            </h1>
            <p class="tw-text-xl tw-text-blue-100 tw-mb-8 tw-max-w-3xl tw-mx-auto">
                Gestiona tu negocio de manera eficiente con nuestro sistema integral de punto de venta. 
                Controla inventario, ventas y reportes en un solo lugar.
            </p>
            @if (Context.Session.GetString("UserEmail") == null)
            {
                <div class="tw-space-x-4">
                    <a href="@Url.Action("Login", "Usuarios")" 
                       class="tw-bg-white tw-text-blue-600 tw-px-8 tw-py-4 tw-rounded-lg tw-font-medium hover:tw-bg-blue-50 tw-transition-colors tw-text-lg">
                        Iniciar Sesión
                    </a>
                    <a href="@Url.Action("Registro", "Usuarios")" 
                       class="tw-bg-blue-500 tw-text-white tw-px-8 tw-py-4 tw-rounded-lg tw-font-medium hover:tw-bg-blue-400 tw-transition-colors tw-text-lg tw-border tw-border-blue-400">
                        Prueba Gratis
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Features Section -->
    <div class="tw-py-20">
        <div class="tw-container tw-mx-auto tw-px-4">
            <h2 class="tw-text-4xl tw-font-bold tw-text-center tw-text-gray-900 tw-mb-12">
                Todo lo que necesitas para tu negocio
            </h2>
            <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-3 tw-gap-8">
                <!-- Feature 1: Ventas -->
                <div class="tw-bg-white tw-p-8 tw-rounded-2xl tw-shadow-lg tw-border tw-border-gray-100">
                    <div class="tw-text-blue-600 tw-mb-4">
                        <i class="bi bi-cart-check tw-text-4xl"></i>
                    </div>
                    <h3 class="tw-text-2xl tw-font-bold tw-mb-4">Gestión de Ventas</h3>
                    <ul class="tw-space-y-3 tw-text-gray-600">
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Proceso de venta rápido y sencillo
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Múltiples formas de pago
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Control de caja y turnos
                        </li>
                    </ul>
                </div>

                <!-- Feature 2: Inventario -->
                <div class="tw-bg-white tw-p-8 tw-rounded-2xl tw-shadow-lg tw-border tw-border-gray-100">
                    <div class="tw-text-blue-600 tw-mb-4">
                        <i class="bi bi-box-seam tw-text-4xl"></i>
                    </div>
                    <h3 class="tw-text-2xl tw-font-bold tw-mb-4">Control de Inventario</h3>
                    <ul class="tw-space-y-3 tw-text-gray-600">
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Gestión de productos y categorías
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Control de stock en tiempo real
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Alertas de stock bajo
                        </li>
                    </ul>
                </div>

                <!-- Feature 3: Reportes -->
                <div class="tw-bg-white tw-p-8 tw-rounded-2xl tw-shadow-lg tw-border tw-border-gray-100">
                    <div class="tw-text-blue-600 tw-mb-4">
                        <i class="bi bi-graph-up tw-text-4xl"></i>
                    </div>
                    <h3 class="tw-text-2xl tw-font-bold tw-mb-4">Reportes Detallados</h3>
                    <ul class="tw-space-y-3 tw-text-gray-600">
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Informes de ventas diarias
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Análisis de productos más vendidos
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Estadísticas de rendimiento
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Planes Section -->
    <div class="tw-py-20 tw-bg-gray-50">
        <div class="tw-container tw-mx-auto tw-px-4">
            <h2 class="tw-text-4xl tw-font-bold tw-text-center tw-text-gray-900 tw-mb-4">
                Planes que se adaptan a tu negocio
            </h2>
            <p class="tw-text-xl tw-text-center tw-text-gray-600 tw-mb-12">
                Elige el plan que mejor se ajuste a tus necesidades
            </p>
            
            <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-3 tw-gap-8">
                <!-- Plan Básico -->
                <div class="tw-bg-white tw-rounded-2xl tw-shadow-lg tw-p-8 tw-border tw-border-gray-100 tw-transition-all hover:tw-shadow-xl hover:-tw-translate-y-1">
                    <h3 class="tw-text-2xl tw-font-bold tw-mb-4">Plan Básico</h3>
                    <div class="tw-text-3xl tw-font-bold tw-text-blue-600 tw-mb-2">$30.000</div>
                    <p class="tw-text-gray-500 tw-mb-6">por mes</p>
                    <ul class="tw-space-y-3 tw-mb-8">
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            1 usuario
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Gestión básica de ventas
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Control de inventario
                        </li>
                    </ul>
                    <a href="@Url.Action("Registro", "Usuarios", new { plan = "basico" })" 
                       class="tw-block tw-text-center tw-bg-white tw-text-blue-600 tw-border tw-border-blue-600 tw-rounded-lg tw-py-3 tw-font-medium hover:tw-bg-blue-50 tw-transition-colors">
                        Comenzar
                    </a>
                </div>

                <!-- Plan Pro -->
                <div class="tw-bg-white tw-rounded-2xl tw-shadow-lg tw-p-8 tw-border-2 tw-border-blue-600 tw-transform tw-scale-105 tw-relative">
                    <div class="tw-absolute tw-top-0 tw-left-1/2 tw-transform -tw-translate-x-1/2 -tw-translate-y-1/2">
                        <span class="tw-bg-blue-600 tw-text-white tw-px-4 tw-py-1 tw-rounded-full tw-text-sm tw-font-medium">
                            Más Popular
                        </span>
                    </div>
                    <h3 class="tw-text-2xl tw-font-bold tw-mb-4">Plan Pro</h3>
                    <div class="tw-text-3xl tw-font-bold tw-text-blue-600 tw-mb-2">$50.000</div>
                    <p class="tw-text-gray-500 tw-mb-6">por mes</p>
                    <ul class="tw-space-y-3 tw-mb-8">
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Hasta 4 usuarios
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Todo del Plan Básico
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Reportes avanzados
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Programa de fidelización
                        </li>
                    </ul>
                    <a href="@Url.Action("Registro", "Usuarios", new { plan = "pro" })" 
                       class="tw-block tw-text-center tw-bg-blue-600 tw-text-white tw-rounded-lg tw-py-3 tw-font-medium hover:tw-bg-blue-700 tw-transition-colors">
                        Comenzar
                    </a>
                </div>

                <!-- Plan Enterprise -->
                <div class="tw-bg-white tw-rounded-2xl tw-shadow-lg tw-p-8 tw-border tw-border-gray-100 tw-transition-all hover:tw-shadow-xl hover:-tw-translate-y-1">
                    <h3 class="tw-text-2xl tw-font-bold tw-mb-4">Plan Enterprise</h3>
                    <div class="tw-text-3xl tw-font-bold tw-text-blue-600 tw-mb-2">$90.000</div>
                    <p class="tw-text-gray-500 tw-mb-6">por mes</p>
                    <ul class="tw-space-y-3 tw-mb-8">
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Usuarios ilimitados
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Todo del Plan Pro
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            Soporte prioritario
                        </li>
                        <li class="tw-flex tw-items-center">
                            <i class="bi bi-check2 tw-text-green-500 tw-mr-2"></i>
                            API para integraciones
                        </li>
                    </ul>
                    <a href="@Url.Action("Registro", "Usuarios", new { plan = "enterprise" })" 
                       class="tw-block tw-text-center tw-bg-white tw-text-blue-600 tw-border tw-border-blue-600 tw-rounded-lg tw-py-3 tw-font-medium hover:tw-bg-blue-50 tw-transition-colors">
                        Comenzar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="tw-py-20">
        <div class="tw-container tw-mx-auto tw-px-4 tw-text-center">
            <h2 class="tw-text-4xl tw-font-bold tw-text-gray-900 tw-mb-6">
                Comienza hoy mismo
            </h2>
            <p class="tw-text-xl tw-text-gray-600 tw-mb-8 tw-max-w-2xl tw-mx-auto">
                Únete a los cientos de negocios que ya confían en VentaPOS para gestionar sus ventas diarias.
            </p>
            <a href="@Url.Action("Registro", "Usuarios")" 
               class="tw-inline-block tw-bg-blue-600 tw-text-white tw-px-8 tw-py-4 tw-rounded-lg tw-font-medium hover:tw-bg-blue-700 tw-transition-colors tw-text-lg">
                Prueba Gratis por 14 días
            </a>
        </div>
    </div>
</div>
