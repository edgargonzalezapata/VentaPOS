@model VentaPOS.Models.RegistroUsuarioViewModel

@{
    ViewData["Title"] = "Registro de Empresa";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-gradient-primary text-white">
                    <h2 class="text-center mb-0">Registro de Empresa</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Registro" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Rut" class="form-label fw-bold"></label>
                                <input asp-for="Rut" class="form-control" placeholder="12.345.678-9" />
                                <span asp-validation-for="Rut" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NombreEmpresa" class="form-label fw-bold"></label>
                                <input asp-for="NombreEmpresa" class="form-control" placeholder="Nombre de la empresa" />
                                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold"></label>
                                <input asp-for="Correo" class="form-control" placeholder="empresa@ejemplo.com" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-bold"></label>
                                <input asp-for="Telefono" class="form-control" placeholder="+56 9 1234 5678" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label fw-bold"></label>
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección de la empresa" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-bold"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info mt-3">
                            <h5 class="fw-bold">Datos del Administrador</h5>
                            <div class="mb-3">
                                <label asp-for="NombreAdmin" class="form-label fw-bold"></label>
                                <input asp-for="NombreAdmin" class="form-control" placeholder="Nombre del administrador" />
                                <span asp-validation-for="NombreAdmin" class="text-danger"></span>
                            </div>
                        </div>

                        @if (ViewData["PlanSeleccionado"] != null)
                        {
                            <div class="alert alert-success mt-3">
                                <p>Has seleccionado el plan: <strong>@ViewData["PlanSeleccionado"]</strong></p>
                                <input type="hidden" asp-for="PlanSeleccionado" value="@ViewData["PlanSeleccionado"]" />
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mt-3">
                                <p>Al registrarte, obtendrás automáticamente un plan Demo por 7 días.</p>
                            </div>
                        }

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-building-fill-add me-2"></i> Registrar Empresa
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p>¿Ya tienes cuenta? <a asp-action="Login" class="text-decoration-none fw-bold">Iniciar sesión</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 