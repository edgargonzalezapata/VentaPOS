@model VentaPOS.Models.RegistroUsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="card-title mb-4">
                        <i class="bi bi-person-plus-fill text-primary me-2"></i>
                        Crear Nuevo Usuario
                    </h2>

                    <form asp-action="CrearUsuario" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="NombreAdmin" class="form-label">Nombre</label>
                            <input asp-for="NombreAdmin" class="form-control" />
                            <span asp-validation-for="NombreAdmin" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                            <input asp-for="Correo" class="form-control" type="email" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label for="RolId" class="form-label">Rol del Usuario</label>
                            <select name="RolId" id="RolId" class="form-select">
                                @foreach (var rol in ViewBag.Roles)
                                {
                                    <option value="@rol.Value">@rol.Text</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="bi bi-person-plus me-2"></i>
                                Crear Usuario
                            </button>
                            <a asp-action="GestionUsuarios" class="btn btn-outline-secondary flex-grow-1">
                                <i class="bi bi-x-circle me-2"></i>
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 