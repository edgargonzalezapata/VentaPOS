@model VentaPOS.Models.Usuario

<form id="formEditarUsuario" class="h-100 d-flex flex-column">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UsuarioId" />
    <input type="hidden" asp-for="EmpresaRut" />
    
    <div class="flex-grow-1 overflow-auto p-3">
        <h5 class="mb-4">Detalles del Usuario</h5>
        
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-person-fill"></i>
                </span>
                <input asp-for="Nombre" class="form-control" required />
            </div>
        </div>
        
        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-envelope-fill"></i>
                </span>
                <input asp-for="Correo" type="email" class="form-control" required />
            </div>
        </div>
        
        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-telephone-fill"></i>
                </span>
                <input asp-for="Telefono" class="form-control" />
            </div>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Roles</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-shield-fill"></i>
                </span>
                <select name="Rols" asp-items="ViewBag.RolesDisponibles" class="form-select" multiple>
                    @foreach (var rol in Model.Rols)
                    {
                        <option value="@rol.RolId" selected>@rol.Nombre</option>
                    }
                </select>
            </div>
        </div>
        
        <div class="mb-3">
            <div class="form-check form-switch">
                <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" />
                <label asp-for="Activo" class="form-check-label">Usuario Activo</label>
            </div>
        </div>
    </div>

    <div class="border-top p-3">
        <div class="d-grid gap-2">
            <button type="button" class="btn btn-primary" onclick="guardarCambios()">
                <i class="bi bi-save-fill me-2"></i>Guardar Cambios
            </button>
            <button type="button" class="btn btn-warning" onclick="mostrarCambioContraseña(@Model.UsuarioId)">
                <i class="bi bi-key-fill me-2"></i>Cambiar Contraseña
            </button>
            <button type="button" class="btn btn-danger" onclick="eliminarUsuario(@Model.UsuarioId)">
                <i class="bi bi-trash-fill me-2"></i>Eliminar Usuario
            </button>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">
                <i class="bi bi-x-lg me-2"></i>Cerrar
            </button>
        </div>
    </div>
</form> 