@model VentaPOS.Models.Usuario

<div class="modal-header">
    <h5 class="modal-title">Crear Nuevo Usuario</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="formCrearUsuario">
        <input type="hidden" asp-for="EmpresaRut" value="@ViewBag.EmpresaRut" />
        
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        
        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo</label>
            <input asp-for="Correo" type="email" class="form-control" required />
        </div>
        
        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Roles</label>
            <select asp-items="ViewBag.RolesDisponibles" class="form-select" multiple required>
            </select>
        </div>
        
        <div class="alert alert-info">
            La contraseña temporal será: 123456
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" onclick="crearUsuario()">Crear Usuario</button>
</div> 